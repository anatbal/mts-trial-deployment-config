{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Json Config File",
  "type" : "object",
  "additionalProperties" : false,
  "properties" : {
    "name" : {
      "type" : "string"
    },
    "id" : {
      "type" : "string"
    },
    "version" : {
      "type" : "integer",
      "default" : 1
    },
    "rootUser" : {
      "type" : "string"
    },
    "tenant_id" : {
      "type" : "string"
    },
    "ui_client_id" : {
      "type" : "string"
    },
    "site_service" : {
      "$ref" : "#/definitions/Service"
    },
    "practitioner_service" : {
      "$ref" : "#/definitions/Service"
    },
    "config_server_service" : {
      "$ref" : "#/definitions/Service"
    },
    "role_service" : {
      "$ref" : "#/definitions/Service"
    },
    "spring_cloud" : {
      "$ref" : "#/definitions/SpringCloud"
    }
  },
  "required" : [ "name", "id", "version", "rootUser", "tenant_id", "ui_client_id", "site_service", "practitioner_service", "role_service", "config_server_service", "spring_cloud" ],
  "definitions" : {
    "Service" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "image_name" : {
          "type" : "string"
        },
        "image_tag" : {
          "type" : "string"
        }
      },
      "required" : [ "image_name", "image_tag" ]
    },
    "SpringCloud" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "gateway_service" : {
          "$ref" : "#/definitions/Service"
        },
        "discovery_service" : {
          "$ref" : "#/definitions/Service"
        },
        "config_server" : {
          "$ref" : "#/definitions/Service"
        }
      },
      "required" : [ "gateway_service", "discovery_service", "config_server" ]
    }
  }
}